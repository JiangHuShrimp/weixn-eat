.main-controller {
    display: flex;
    flex-direction: column;
    height: 100%;
    font-size: 32rpx;
    box-sizing: border-box;
}
/*导航搜索*/
.main-controller .main-nav {
	width: 100%;
	height: 80rpx !important;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #F26166; 
	/*position: fixed;*/
}
.main-controller .main-nav .location {
	background: rgba(0,0,0,.5);
	color: #fff;
	margin-right: 10px;
	border-radius: 5px;
	padding: 3px;
}
.main-controller .main-nav .search {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 70%;
	height: 35%;
	padding: 10rpx;
	border-radius: 20rpx;
	background: #fff;
}
.main-controller .main-nav image {
	width: 35rpx;
	height: 35rpx;
}
.main-controller .main-nav input {
	flex: 1;
	padding-left: 10rpx;
	font-size: 32rpx;
}
/*商品列表*/
/*导航*/
.main-controller .goods {
	flex: 1;
	width: 100%;
	height: 100%;
}
.main-controller .goods .title {
	text-align: center;
	font-size: 36rpx;
	font-weight: bold;
	padding: 20rpx 0;
	background: #fff;
}
.main-controller .goods .nav {
	display: flex;
	background: #fff;
}
.main-controller .goods .nav li {
	flex: 1;
	text-align: center;
	padding: 20rpx 0;
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	color: #111;
}
.main-controller .goods .nav li image {
	width: 35rpx;
	height: 35rpx;
}
/*列表*/
.main-controller .goods .list {
	width: 100%;
	height: overflow;
}
.main-controller .goods .list navigator {
	padding: 10rpx;
}
.main-controller .goods .list .dlview {
	display: flex;
	width: 100%;
	padding: 10rpx 15rpx;
	background: #fff;
}
.main-controller .goods .list .dlview .dtview {
	flex: 1;
	display: flex;
	align-items: center;
	padding-right: 30rpx;
}
.main-controller .goods .list .dlview .dtview image {
	width: 100%;
}
.main-controller .goods .list .dlview .ddview {
	flex: 3;
	display: flex;
	flex-direction: column;
	padding-right: 40rpx;
}
.main-controller .goods .list .dlview .ddview view {
	width: 100%;
	display: flex;
	justify-content: space-between;
	color: #111;
}
.main-controller .goods .list .dlview .ddview view b {
	font-size: 28rpx;
}
@media screen and (max-width: 321px) {
    .main ul li {
        font-size: 14px;
    }
}

@media screen and (min-width: 322px) and (max-width: 414px) {
    .main ul li {
        font-size: 16px;
    }
}

@media screen and (min-width: 415px) {
    .main ul li {
        font-size: 18px;
    }
}
